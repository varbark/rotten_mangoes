
<%= link_to 'Creat new user', new_admin_user_path %>
<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to 'Switch to this user', session_path(:another_user_id => user.id), method: :post %></td>
      <td><%= user.firstname %></td>
      <td><%= user.lastname %></td>
      <td>(<%= link_to 'edit', edit_admin_user_path(user) %> | <%= link_to 'delete', admin_user_path(user), method: :delete %>)</td>
    </tr>
  <% end %>
  </tbody>
</table>  
<%= paginate @users %>